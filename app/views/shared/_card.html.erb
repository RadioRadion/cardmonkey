<div class="col-5">
    <h2><%= locals[:title] %> </h2>

    <% if locals[:total_price] %>
      <h3>total : <%= locals[:total_price] %> â‚¬</h3>
    <% end %>

    <% classes = "#{locals[:side]} card-product" %>

    <% locals[:cards].each do |card| %>
    <div class="container-symb" data-img-id="<%= card.id%>">
      <%= image_tag ("cards/#{card.image[:api_id]}.jpg"), class: "card-absolute" %>
    </div>
    <div class="<%= classes %>" data-id="<%= card.id%>" data-price="<%= card.image.price%>" >
      <div class="card-product-infos">
        <%= card.user.id %>
          <h2><%= card.name %></h2>
          <h2><%= card.image.price %></h2>
          <% if locals[:view] == "wants" %>
            <div class="card-buttons">
              <%= link_to "Del", user_want_path(current_user, card), method: :delete, class: "btn btn-warning"%>
              <%= link_to "edit", edit_user_want_path(current_user, card), class: "btn btn-warning"%>
            </div>
          <% end %>
          <% if locals[:view] == "cards" %>
            <div class="card-buttons">
              <%= link_to "Del", user_card_path(current_user, card), method: :delete, class: "btn btn-warning"%>
              <%= link_to "edit", edit_user_card_path(current_user, card), class: "btn btn-warning"%>
            </div>
          <% end %>
      </div>
    </div>
    <% end %>
  </div>
