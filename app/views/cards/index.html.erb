<div class="container">

  <h1>My Collection</h1>
  <div>
    <%= image_tag ("/cards/39c9e4b5-364b-4c0b-bb47-266563a6abf2.jpg") %>
      <ul>
        <% @cards.each do |card| %>
        <li class="nameScan"> name: <%= card.name %>
        <%= image_tag ("/cards/#{card.image[:api_id]}.jpg") %>
            <%= link_to "Del", user_card_path(current_user, card), method: :delete, class: "btn btn-warning"%>
            <%= link_to "edit", edit_user_card_path(current_user, card), class: "btn btn-warning"%>
        <% end %>
        </li>
      </ul>
       <div>
        <%= link_to "Add card", new_user_card_path, class: 'btn btn-secondary' %>
      </div>
  </div>
</div>
