<div class="space-y-4" data-controller="notifications">
  <% if notifications.any? %>
    <% notifications.each do |notification| %>
      <div class="notification-<%= notification.status %> rounded-lg bg-white p-4 shadow-sm transition" 
           data-id="<%= notification.id %>">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <% case notification.content %>
            <% when /match/i %>
              <div class="rounded-full bg-green-100 p-2">
                <svg class="h-5 w-5 text-green-600" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                  <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                </svg>
              </div>
            <% when /message/i %>
              <div class="rounded-full bg-blue-100 p-2">
                <svg class="h-5 w-5 text-blue-600" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd" />
                </svg>
              </div>
            <% else %>
              <div class="rounded-full bg-gray-100 p-2">
                <svg class="h-5 w-5 text-gray-600" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
              </div>
            <% end %>
          </div>
          <div class="ml-3 w-0 flex-1">
            <p class="text-sm font-medium text-gray-900"><%= notification.content %></p>
            <p class="mt-1 text-sm text-gray-500">
              <%= time_ago_in_words(notification.created_at) %> ago
            </p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-4 text-gray-500">
      Pas de nouvelles notifications
    </div>
  <% end %>
</div>