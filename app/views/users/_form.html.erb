    }
    else {
      offer.remove(card.dataset.id);
      card.classList.remove("selected");
      // one.value = offer.toString();
      // loginForm.elements.offer.value = offer.toString();
    }
  }));

  cardsTarget.forEach(card => card.addEventListener("click", (event) => {
