<div class="min-h-screen bg-gradient-to-br from-indigo-50 to-blue-50 flex flex-col justify-center">
  <div class="w-full max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-extrabold text-gray-900 tracking-tight">
        Edit your account
      </h2>
      <p class="mt-3 text-lg text-gray-500">
        Update your account information
      </p>
    </div>

    <div class="bg-white shadow-xl rounded-lg overflow-hidden">
      <div class="p-6 sm:p-8 lg:p-12">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification class: "mb-6 p-4 rounded-lg bg-red-50 text-red-600" %>

          <div class="space-y-6">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { 
                          class: "block w-full px-6 py-4 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 transition duration-150 ease-in-out focus:ring-2 focus:ring-indigo-500 focus:border-transparent sm:text-sm",
                          autocomplete: "email"
                        },
                        wrapper_html: { class: "block" },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" } %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="p-4 rounded-lg bg-blue-50">
                <p class="text-sm text-blue-700">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              </div>
            <% end %>

            <%= f.input :password,
                        hint: "leave it blank if you don't want to change it",
                        required: false,
                        input_html: { 
                          class: "block w-full px-6 py-4 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 transition duration-150 ease-in-out focus:ring-2 focus:ring-indigo-500 focus:border-transparent sm:text-sm",
                          autocomplete: "new-password",
                          placeholder: "••••••••"
                        },
                        wrapper_html: { class: "block" },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                        hint_html: { class: "mt-2 text-sm text-gray-500" } %>

            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { 
                          class: "block w-full px-6 py-4 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 transition duration-150 ease-in-out focus:ring-2 focus:ring-indigo-500 focus:border-transparent sm:text-sm",
                          autocomplete: "new-password",
                          placeholder: "••••••••"
                        },
                        wrapper_html: { class: "block" },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" } %>

            <%= f.input :current_password,
                        hint: "we need your current password to confirm your changes",
                        required: true,
                        input_html: { 
                          class: "block w-full px-6 py-4 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 transition duration-150 ease-in-out focus:ring-2 focus:ring-indigo-500 focus:border-transparent sm:text-sm",
                          autocomplete: "current-password",
                          placeholder: "••••••••"
                        },
                        wrapper_html: { class: "block" },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                        hint_html: { class: "mt-2 text-sm text-gray-500" } %>

            <div>
              <%= f.button :submit, "Update", class: "w-full flex justify-center py-4 px-6 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% end %>

        <div class="mt-12 pt-8 border-t border-gray-200">
          <div class="text-center">
            <h3 class="text-xl font-bold text-gray-900">Cancel my account</h3>
            <p class="mt-2 text-sm text-gray-500">Once you delete your account, it cannot be recovered. Please be certain.</p>
            <div class="mt-6">
              <%= link_to "Cancel my account",
                          registration_path(resource_name),
                          data: { confirm: "Are you sure you want to delete your account? This action cannot be undone." },
                          method: :delete,
                          class: "inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-red-600 hover:bg-red-700 transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
            </div>
          </div>
        </div>

        <div class="mt-6 text-center">
          <%= link_to "Back", :back, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500 transition duration-150 ease-in-out" %>
        </div>
      </div>
    </div>
  </div>
</div>
