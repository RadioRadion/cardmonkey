<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Edit your account
    </h2>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification class: "rounded-md bg-red-50 p-4 mb-6" %>

        <div class="space-y-6">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { class: "appearance-none block w-64 mx-auto px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" },
                      wrapper_html: { class: "block text-center" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="rounded-md bg-blue-50 p-4">
              <p class="text-sm text-blue-700">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            </div>
          <% end %>

          <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { class: "appearance-none block w-64 mx-auto px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", autocomplete: "new-password" },
                      wrapper_html: { class: "block text-center" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" },
                      hint_html: { class: "mt-1 text-sm text-gray-500 text-center" } %>

          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { class: "appearance-none block w-64 mx-auto px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", autocomplete: "new-password" },
                      wrapper_html: { class: "block text-center" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { class: "appearance-none block w-64 mx-auto px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", autocomplete: "current-password" },
                      wrapper_html: { class: "block text-center" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" },
                      hint_html: { class: "mt-1 text-sm text-gray-500 text-center" } %>

          <div class="flex justify-center">
            <%= f.button :submit, "Update", class: "w-64 flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>

      <div class="mt-10 pt-6 border-t border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 text-center">Cancel my account</h3>
        <div class="mt-4 text-center">
          <p class="text-sm text-gray-500 mb-4">Once you delete your account, it cannot be recovered. Please be certain.</p>
          <%= link_to "Cancel my account",
                      registration_path(resource_name),
                      data: { confirm: "Are you sure you want to delete your account? This action cannot be undone." },
                      method: :delete,
                      class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      </div>

      <div class="mt-6 text-center">
        <%= link_to "Back", :back, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>
    </div>
  </div>
</div>
