<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Change your password
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Please enter your new password below
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification class: "rounded-md bg-red-50 p-4 mb-6" %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token, class: "rounded-md bg-red-50 p-4 mb-6 text-sm text-red-700" %>

        <div class="space-y-6">
          <%= f.input :password,
                      label: "New password",
                      required: true,
                      autofocus: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { class: "appearance-none block w-64 mx-auto px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", autocomplete: "new-password" },
                      wrapper_html: { class: "block text-center" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" },
                      hint_html: { class: "mt-1 text-sm text-gray-500 text-center" } %>

          <%= f.input :password_confirmation,
                      label: "Confirm your new password",
                      required: true,
                      input_html: { class: "appearance-none block w-64 mx-auto px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", autocomplete: "new-password" },
                      wrapper_html: { class: "block text-center" },
                      label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

          <div class="flex justify-center">
            <%= f.button :submit, "Change my password", class: "w-64 flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">
              Or go back to
            </span>
          </div>
        </div>

        <div class="mt-6 text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
