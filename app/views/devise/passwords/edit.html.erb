<div class="min-h-screen bg-gradient-to-br from-indigo-50 to-blue-50 flex flex-col justify-center">
  <div class="w-full max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-extrabold text-gray-900 tracking-tight">
        Change your password
      </h2>
      <p class="mt-3 text-lg text-gray-500">
        Please enter your new password below
      </p>
    </div>

    <div class="bg-white shadow-xl rounded-lg overflow-hidden">
      <div class="p-6 sm:p-8 lg:p-12">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification class: "mb-6 p-4 rounded-lg bg-red-50 text-red-600" %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token, class: "mb-6 p-4 rounded-lg bg-red-50 text-sm text-red-600" %>

          <div class="space-y-6">
            <%= f.input :password,
                        label: "New password",
                        required: true,
                        autofocus: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { 
                          class: "block w-full px-6 py-4 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 transition duration-150 ease-in-out focus:ring-2 focus:ring-indigo-500 focus:border-transparent sm:text-sm",
                          autocomplete: "new-password",
                          placeholder: "••••••••"
                        },
                        wrapper_html: { class: "block" },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" },
                        hint_html: { class: "mt-2 text-sm text-gray-500" } %>

            <%= f.input :password_confirmation,
                        label: "Confirm your new password",
                        required: true,
                        input_html: { 
                          class: "block w-full px-6 py-4 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 transition duration-150 ease-in-out focus:ring-2 focus:ring-indigo-500 focus:border-transparent sm:text-sm",
                          autocomplete: "new-password",
                          placeholder: "••••••••"
                        },
                        wrapper_html: { class: "block" },
                        label_html: { class: "block text-sm font-medium text-gray-700 mb-2" } %>

            <div>
              <%= f.button :submit, "Change my password", class: "w-full flex justify-center py-4 px-6 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </div>
          </div>
        <% end %>

        <div class="mt-8">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-200"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-4 bg-white text-gray-500">Or go back to</span>
            </div>
          </div>

          <div class="mt-6 grid grid-cols-1 gap-4">
            <%= link_to "Sign in", new_session_path(resource_name), 
                class: "w-full inline-flex justify-center py-4 px-6 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

            <%= link_to "Sign up", new_registration_path(resource_name), 
                class: "w-full inline-flex justify-center py-4 px-6 border border-gray-300 rounded-lg shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 transition duration-150 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
