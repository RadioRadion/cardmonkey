<div class="container">
  <div class="row">
  <!--   <div class="col-6">
    </div> -->
    <div class="col-sm-6 col-sm-offset-3">
      <div class="chat-header">
        <h4> <%= @chatroom.name %></h4>
      </div>
        <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
          <% @chatroom.messages.each do |message| %>
          <%= render "messages/message", message: message %>
          <% end %>
        </div>
        <div id="create-message">
          <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
            <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
          <% end %>
        </div>
    </div>
  </div>
</div>

<div class="d-flex align-items-center rounded-circle">
  <div>
    <%= link_to "Messagerie", chatrooms_path, class: 'btn btn-secondary' %>
  </div>
   <div>
    <%= link_to "New Message", new_chatroom_path, class: 'btn far fa-edit' %>
  </div>
</div>


