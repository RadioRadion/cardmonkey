<div class="row justify-content-between">

  <%= render "shared/card", locals: {title: "Ma collection",
    total_price: @total_price,
    cards: @cards,
    side: "card-offer"}  %>

  <%= render "shared/card", locals: {title: "Sa collection",
    total_price: @other_total_price,
    cards: @other_cards,
    side: "card-target"}  %>

</div>

<% if @trade.status == "pending" %>

  <%= link_to("Modifier Trade", edit_user_trade_path(@trade.user_id, @trade.id)) %>
  <%= link_to("Accepter Trade", user_trade_path(@trade.user_id, @trade.id, status: "accepted"), method: 'put') %>

<% elsif @trade.status == "accepted" %>

  <p>TRADE ACCEPTE</p>
  <p>Si le trade a été réalisé, merci de le valider</p>
  <%= link_to("Trade fait", user_trade_path(@trade.user_id, @trade.id, status: "done"), method: 'put') %>

<% else @trade.status == "done" %>

  <p>TRADE TERMINE</p>

<% end %>

