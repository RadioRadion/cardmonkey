<div class="bg-white rounded-lg shadow p-4 mt-6">
  <h3 class="text-lg font-semibold mb-4">Suggestions d'Ã©change</h3>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%# Pour le partenaire %>
    <div>
      <div class="flex items-center justify-between mb-2">
        <h4 class="text-sm font-medium text-gray-600">
          Dans sa wishlist
          <span class="ml-2 px-2 py-0.5 bg-blue-100 text-blue-800 rounded-full text-xs">
            <%= @suggested_cards[:for_partner].count %>
          </span>
        </h4>
        <%= link_to "Tout voir", 
                    new_proposition_trades_path(partner_id: @partner.id, filter: 'in_wishlist'),
                    class: "text-sm text-blue-600 hover:text-blue-800" %>
      </div>
      
      <div class="grid grid-cols-3 sm:grid-cols-4 gap-3">
        <%= render partial: "trades/card",
                   collection: @suggested_cards[:for_partner],
                   locals: { side: 'user' } %>
      </div>
    </div>

    <%# Pour moi %>
    <div>
      <div class="flex items-center justify-between mb-2">
        <h4 class="text-sm font-medium text-gray-600">
          Dans votre wishlist
          <span class="ml-2 px-2 py-0.5 bg-blue-100 text-blue-800 rounded-full text-xs">
            <%= @suggested_cards[:for_me].count %>
          </span>
        </h4>
      </div>
      
      <div class="grid grid-cols-3 sm:grid-cols-4 gap-3">
        <%= render partial: "trades/card",
                   collection: @suggested_cards[:for_me],
                   locals: { side: 'partner' } %>
      </div>
    </div>
  </div>
</div>