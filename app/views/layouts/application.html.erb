<!DOCTYPE html>
<html data-turbo="true">
<head>
  <title>Cardmonkey</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="turbo-cache-control" content="no-cache">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-capable" content="yes">
  
  <%= stylesheet_link_tag "application.tailwind", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <%= action_cable_meta_tag %>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body class="flex flex-col min-h-screen <%= 'bg-gray-50' unless current_page?(root_path) && !user_signed_in? %>" data-turbo-preserve-scroll>
  <div class="flex-grow">
    <%= render 'shared/navbar' %> 
    <%= render 'shared/flashes' %> 
    <div class="<%= 'container mx-auto px-4' unless current_page?(root_path) && !user_signed_in? %>"> 
      <%= yield %>
    </div>
  </div>
  <%= render 'shared/footer' %> 
</body>
</html>
