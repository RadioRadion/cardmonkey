<div class="min-h-screen bg-gray-50">
  <main class="py-10">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <%# Notifications Turbo Stream %>
      <%= turbo_stream_from "user_notifications_#{current_user.id}" %>
      <div id="notifications">
        <%= render "notifications/list", notifications: @notifications %>
      </div>

      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <%# Recent Trades Panel %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Échanges récents</h3>
            <%= render "trades/recent_list", trades: @recent_trades %>
          </div>
        </div>

        <%# Potential Matches Panel %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Matchs potentiels</h3>
            <%= render "matches/potential_list", matches: @potential_matches %>
          </div>
        </div>

        <%# Quick Actions Panel %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-5">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Actions rapides</h3>
            <div class="mt-4 flex space-x-4">
              <%= link_to new_user_card_path, class: "flex-1 inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Ajouter à ma collection
              <% end %>
              
              <%= link_to new_user_wanted_card_path, class: "flex-1 inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200" do %>
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Ajouter recherchées
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
